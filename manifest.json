{
  "manifest_version": 2,
  "name": "Go To Link Text",
  "version": "1.1",
  "applications": {
    "gecko": {
      "id": "facundop@gmail.com"
    }
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content_script.js"]
  }],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab"
  ]
}